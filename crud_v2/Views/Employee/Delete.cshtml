@model crud_v2.ViewModels.DeleteEmployeeVM

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container" style="margin-top: 150px; margin-bottom: 100px; min-height: 500px;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-center text-uppercase mb-4 text-danger">Delete Employee</h2>

            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
                <p>Are you sure you want to delete this employee? This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Employee Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>ID:</strong></div>
                        <div class="col-md-8">@Model.Id</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Name:</strong></div>
                        <div class="col-md-8">@Model.Name</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Salary:</strong></div>
                        <div class="col-md-8">@Model.Salary.ToString("C")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Created On:</strong></div>
                        <div class="col-md-8">@Model.CreatedOn.ToString("dd/MM/yyyy")</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.File))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Profile Image:</strong></div>
                            <div class="col-md-8">
                                <img src="~/Files/ImageProfile/@Model.File" alt="Employee Image" style="max-width: 200px; max-height: 200px; border-radius: 8px;" />
                            </div>
                        </div>
                    }
                </div>
            </div>

            <form asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post" class="mt-4">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash"></i> Yes, Delete Employee
                    </button>
                    <a asp-action="showAll" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>