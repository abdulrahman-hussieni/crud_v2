@model crud_v2.ViewModels.EditEmployeeVM

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container" style="margin-top: 150px; margin-bottom: 100px; min-height: 500px;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-center text-uppercase mb-4">Edit Employee</h2>

            <form asp-action="UpdateData" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden ID field -->
                <input asp-for="Id" type="hidden" />
                <input asp-for="ExistingFile" type="hidden" />

                <!-- Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Enter employee name" />
                    <label asp-for="Name">Employee Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="form-floating mb-3">
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Enter salary" />
                    <label asp-for="Salary">Salary</label>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Current File Display -->
                @if (!string.IsNullOrEmpty(Model.ExistingFile))
                {
                    <div class="mb-3">
                        <label class="form-label">Current Profile Image:</label>
                        <div>
                            <img src="~/Files/ImageProfile/@Model.ExistingFile" alt="Current Image" style="max-width: 200px; max-height: 200px; border-radius: 8px;" />
                        </div>
                    </div>
                }

                <!-- File Upload (Optional - to replace existing) -->
                <div class="mb-3">
                    <label asp-for="File" class="form-label">Upload New Profile Image (Optional)</label>
                    <input asp-for="File" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="File" class="text-danger"></span>
                    <small class="text-muted">Leave empty to keep current image</small>
                </div>

                <!-- Buttons -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Update Employee
                    </button>
                    <a asp-action="showAll" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}