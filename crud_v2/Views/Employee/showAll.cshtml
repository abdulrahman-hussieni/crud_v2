@using crud_v2.ModelVM.EmployeeVM
@model List<ShowAllEmployeeVM>

@{
    ViewData["Title"] = "All Employees";
}

<div class="container" style="margin-top: 150px; margin-bottom: 100px; min-height: 500px;">
    <h2 class="text-center text-uppercase mb-4">All Employees</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>File</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.Name</td>
                            <td>@employee.Salary.ToString("C")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(employee.File))
                                {
                                    <a href="~/Files//ImageProfile/@employee.File" target="_blank" class="btn btn-sm btn-info">
                                        <i class="fas fa-file"></i> View
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No file</span>
                                }
                            </td>
                            <td>@employee.CreatedOn.ToString("dd/MM/yyyy")</td>
                            @* Actions *@
                            <td>
                                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No employees found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Employee
        </a>
    </div>
</div>