@using crud_v2.ViewModels
@model CreateEmployeeVM

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container" style="margin-top: 150px; margin-bottom: 100px; min-height: 500px;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="text-center text-uppercase mb-4">Create New Employee</h2>

            <form asp-action="SaveData" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Enter employee name" />
                    <label asp-for="Name">Employee Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="form-floating mb-3">
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Enter salary" />
                    <label asp-for="Salary">Salary</label>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- File Upload -->
                <div class="mb-3">
                    <label asp-for="File" class="form-label">Upload Profile Image</label>
                    <input asp-for="File" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Create Employee
                    </button>
                    <a asp-action="showAll" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}